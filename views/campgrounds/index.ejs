<% layout('layouts/style') %>
    <h1>All descriptors + places</h1>
    <a href="/campgrounds/new">Create new Campgrounds</a>
    <% for(let index of result){ %>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= index.image %> " alt="" >
                </div>
                <div class="col-md-8">
                    <h5 class="card-title">
                        <%= index.title %>
                    </h5>
                    <p class="card-text">
                        <%= index.description %>
                    </p>
                    <p class="card-text">
                        <small class="text-muted">
                            <%= index.location %>
                        </small>
                    </p>
                    <a class="btn btn-primary" href="/campgrounds/<%= index._id %>">View <%= index.title %> </a>
                </div>
            </div>
        </div>

        <% } %>